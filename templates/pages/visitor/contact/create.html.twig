{% extends 'themes/base_visitor.html.twig' %}

{% block title %}Contact{% endblock %}

{% block description %}Contactez-moi{% endblock %}
{% block style %}
    <link rel="stylesheet" href="/styles/header.css">
{% endblock %}
{% block main %}
  <main>
      <h1 class="text-center my-3 display-5"></h1>
         {# Header component #}
        {% include 'components/visitor/header.html.twig' with {'h1':"Contactez-moi"} %}  
   
        <div class="container">
          <div class="row">
             <div class="col-lg-6">
                          {% include 'components/alert.html.twig' %}
                {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6 mb-3">

                          <label for="contact_form_firstName">Prénom <span class="text-danger">*</span></label>
                          <div class="text-danger">{{form_errors(form.firstName)}}</div>
                            {{ form_widget(form.firstName, {'attr': {'class':'form-control','autofocus':'autofocus'}})}}
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="contact_form_lastName">Nom <span class="text-danger">*</span></label>
                             <div class="text-danger">{{form_errors(form.lastName)}}</div>
                                {{ form_widget(form.lastName, {'attr': {'class':'form-control'}})}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                          <label for="contact_form_email">Email <span class="text-danger">*</span></label>
                           <div class="text-danger">{{form_errors(form.email)}}</div>
                            {{ form_widget(form.email, {'attr': {'class':'form-control'}})}}
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="contact_form_phone">Téléphone</label>
                             <div class="text-danger">{{form_errors(form.phone)}}</div>
                                {{ form_widget(form.phone, {'attr': {'class':'form-control'}})}}
                        </div>
                      <div class="mb-3">
                            <label for="contact_form_message">Message <span class="text-danger">*</span></label>
                             <div class="text-danger">{{form_errors(form.message)}}</div>
                                {{ form_widget(form.message, {'attr': {'class':'form-control','rows':'6'}})}}
                        </div>
                        <div>
                           <input formnovalidate type="submit" class="btn btn-primary shadow">
                        </div>
                    </div>
             {{ form_end(form) }}
             </div>
             <div class="col-lg-6 d-flex flex-column justify-content-center align-items-center my-5">
                <div class="text-center text-md-start yb-contact-center">
                    <p><i class="fa-solid fa-envelope"></i> : monblogdevoyage@gmail.com</p>
                 <p><i class="fa-solid fa-phone"></i> : 06 59 22 99 10</p>
                   <div>
                      <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d21111.113567664714!2d1.2184657840803101!3d48.59282041300898!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e3fa585a230b09%3A0x53e73478edbf47bd!2s28170%20Ch%C3%A2teauneuf-en-Thymerais!5e0!3m2!1sfr!2sfr!4v1720781339422!5m2!1sfr!2sfr" class="w-100 h-100" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                   </div>
                </div>
             </div>
          </div>
        </div>
  </main>
{% endblock %}
