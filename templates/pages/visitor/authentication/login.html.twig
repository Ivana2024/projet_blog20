
{% extends 'themes/base_visitor.html.twig' %}

    {% block title %}Inscrivez vous{% endblock %}
  

   
   {% block main %}


            <body class="h-100">

            <main class="container my-5">
                <div class="row">
                    <div class="col-lg-7 text-center">
                        <img src="{{asset('img/visitor/registration/island.400x245.jpeg')}}" alt="inscription" ="img-fluid">
                    </div>
                    <div class="col-lg-5 d-flex flex-column justify-content-center align-items-center">

                        <form method="POST" class="w-100">
                            {% if error %}
                                <div class="text-center alert alert-danger role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            {% for message in app.flashes ('succes') %}
                                {% if error %}
                                <div class="text-center alert alert-success" role="alert">{{ message }}</div>
                                {% endif %}    
                            {% endfor %}

                            <div class="mb-3">
                                <label for="inputEmail">Email</label>
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" 
                                autocomplete="email" required autofocus>
                            </div>

                            <div class="mb-3">
                                <label for="inputPassword">Password</label>
                                <input type="password" name="password" id="inputPassword" class="form-control"
                                autocomplete="current-password" required>
                            </div>
                            <div class="mb-3">
                                <div class="row">
                                    <div class="col-md-6 my-1 "
                                    <label>
                                        <input type="checkbox" name="_remember_me" checked>
                                      Se suvenir de moi
                                    </label>
                                    </div>
                                    <div class="col-md-6 text-lg-end"
                                      <a href="">Mot de passe oubliée?</a>
                                    </div>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            {# <div class="checkbox mb-3">
                                <label>
                                      <input type="checkbox" name="_remember_me"> Remember me
                                </label> #}
                            <div>
                                <input formenovalidate type="submit" class="w-100 btn btn-primary shadow" value="Se connecter" 
                            </div>
                                      
                            
                        </form>
                            <div class="text-center mt-3">
                                <p>Vous n'avez pas encore de compte ? <a href="{{path('visitor_registration_register')}}">Inscrivez-vous</a></p>
                                 <p><a href="{{path('visitor_welcome_index')}}">Retour à l'accueil</a></p>
                            </div> 
                    </div>
                 </div>
            </main>
                                
                        {% endblock %}
                            
                                    

                        


                
                        

                   
